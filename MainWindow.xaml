<Window x:Class="PercentageCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PercentageCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Grid>
    <StackPanel>
      <StackPanel Orientation="Horizontal">
        <Slider Name="sldOne" Minimum="0" Maximum="100" Margin="5" Width="350" ValueChanged="Slider_ValueChanged" SmallChange="1" Value="12"></Slider>
        <Label Name="txtOne">23 -> 12%</Label>
      </StackPanel>

      <StackPanel Orientation="Horizontal">
        <Slider Name="sldTwo" Minimum="0" Maximum="100" Margin="5" Width="350" ValueChanged="Slider_ValueChanged" SmallChange="1" Value="7"></Slider>
        <Label Name="txtTwo">23 -> 12%</Label>
      </StackPanel>

      <StackPanel Orientation="Horizontal">
        <Slider Name="sldThree" Minimum="0" Maximum="100" Margin="5" Width="350" ValueChanged="Slider_ValueChanged" SmallChange="1" Value="11"></Slider>
        <Label Name="txtThree">23 -> 12%</Label>
      </StackPanel>

      <Label Name="txtTotal">Total: </Label>
    </StackPanel>
  </Grid>
</Window>
